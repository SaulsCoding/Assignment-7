<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bottom.TabbedPage1"
            xmlns:views="clr-namespace:Bottom.Views"
            Title="WhatsApp"
            >

    <TabbedPage.ToolbarItems>
        <ToolbarItem Icon="search.png"/>
        <ToolbarItem Icon="menu.png"/>
    </TabbedPage.ToolbarItems>
    

    <TabbedPage.Children>
        <NavigationPage>
            <x:Arguments>
                <views:Page1 Icon="camera.png"/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="CHATS" BackgroundColor="Transparent">
            <x:Arguments>
                <views:Page2 />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="STATUS" BackgroundColor="Transparent">
            <x:Arguments>
                <views:Page3 />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="CALLS" >
            <x:Arguments>
                <views:Page4 />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>

</TabbedPage>