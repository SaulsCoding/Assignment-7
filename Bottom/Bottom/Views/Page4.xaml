            <ImageButton Source="videocall.png" Grid.Row="1" Grid.Column="2" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>

            <Image Source="dpss.png" Grid.Row="2" Grid.Column="0"  />
            <Label Text="Kate" Grid.Row="2" Grid.Column="1" />
            <Label Text="16 November, 10:57" TextColor="Gray" Grid.Row="2" Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="Center"></Label>
